@model Blog.Web.Areas.Admin.Models.Comments.EditCommentModel
@{
    ViewData["Title"] = "Edit Comment";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Update Group</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row justify-content-md-center">
            <div class="col-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Update Category</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <partial name="_ActionMessage" model="@Model.Response" />
                        <form asp-area="Admin" asp-controller="Comment" asp-action="Edit" method="post" class="form-horizontal border border-warning" >
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="BlogcomposeId" />
                            <div>
                                <label asp-for="Name"></label>
                                <input readonly style="box-shadow :none ; border: hidden" asp-for="Name" />
                            </div>
                            <div>
                                <label asp-for="Email"></label>
                                <input readonly style="box-shadow :none ; border: hidden" asp-for="Email" />
                            </div>
                            <div>
                                <label asp-for="Message"></label>
                                <input readonly style="box-shadow :none ; border: hidden"  asp-for="Message" />
                            </div>
                            

                            <div class="form-group">
                                <label asp-for="IsAprove" class="col-md-2 control-label">Approve</label>
                                <div class="col-md-2">
                                    <input asp-for="IsAprove" class="form-control" />
                                    <span asp-validation-for="IsAprove" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-10">
                                    <input type="submit" class="btn btn-primary" value="Update" />
                                    <button class="btn btn-success" onclick="location.href='@Url.Action("Index","Comment", new { area = "Admin" })'"> Back </button>

                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

@section PageScripts
{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}
